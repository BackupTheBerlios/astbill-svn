		$group .= '<tr><td></td><td>'.form_submit(t('View'));
		$group .= '</td></tr>';
		//$group .= form_textfield(t('Country Code'), 'countrycode', $edit['countrycode'], 10, 100);
		//$group .= form_submit(t('Search'));
	}
	$group .= $output;
	return form($group);

