// BEGIN PRICELIST
function _astratetable_all() {
  global $user;
  global $db_prefix; 

  $edit = $_POST["edit"];
  $op = $_POST["op"];



  switch (($op ? $op : arg(1))) {
    case t('Go'):

    	$sql = db_fetch_object(db_query("SELECT brand FROM astuser WHERE uid = '%s' and db_prefix ='".$db_prefix."'", $user->uid));
	drupal_goto("astpbx/pricelist/country/".$edit['countrycode']."/".$sql->brand);
	break;
        default:
        if (arg(2) == 'country') {
		if (!is_numeric(arg(3))) {
		drupal_access_denied();
		return;
	} else {
		$value = arg(3);
		$value2 = arg(4);
	}}


    	$output = astratetable_form($where, $value, $value2);
	
    	if (arg(2) == 'country') {
		$where = 'country';
		$output .= astratetable_form($where, $value, $value2);

	}
	
	
  }

  
  if ($where == 'country') {
	  $sql = db_fetch_object(db_query("SELECT country FROM astcountrycode WHERE countrycode = '%s'", $value));
	  $title = $sql->country;
  }
  
  if (empty($title)) {
	  $title = t('Select Country');
  }
  

_astroute_printtheme_best($output, $title);
}


