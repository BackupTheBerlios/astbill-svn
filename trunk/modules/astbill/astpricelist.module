function astpricelist_menu($may_cache) {
  $items = array();
  $access = user_access('astpricelist can use');
  $items[] = array('path' => 'astpbx/pricelist',
                                  'title' => t('Rate Table'),
                                  'callback' => '_astratetable_all',
                                  'access' => $access);
